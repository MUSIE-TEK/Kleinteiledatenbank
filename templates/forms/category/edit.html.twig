{% extends 'base.html.twig' %}

{% block title %}
    Kategorie {{ title }}
{% endblock %}

{% block body %}
    <div class="container mb-3">
        {% if title is same as 'bearbeiten' %}
            <h1>Kategorie {{ categoryId }} wird bearbeitet:</h1>
        {% else %}
            <h1>Kategorie erstellen:</h1>
        {% endif %}
        {{ form_start(categoryEditForm) }}
        <div class="row">
            <div class="col-lg-6 col-12">
                {{ form_row(categoryEditForm.name) }}

            </div>
            <div class="col-lg-6 col-12">
                {{ form_row(categoryEditForm.shortcut) }}
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-outline-primary">Speichern</button>
        </div>
        {{ form_end(categoryEditForm) }}
    </div>
{% endblock %}



